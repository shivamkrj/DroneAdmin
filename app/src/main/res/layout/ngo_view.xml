<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#80B6F3AD"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ngo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Name of ngo"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingEnd="5dp"
                    android:paddingLeft="5dp"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:paddingStart="5dp"
                    android:text="R.no:" />
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:paddingStart="5dp"
                    android:text="name of user" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:padding="2dp"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:text="90********"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/call_ngo"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:src="@drawable/outline_phone_black_24" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:text="About NGO:" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/detail_ngo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="#FFFFFF"
                    android:layout_margin="5dp"
                    android:text="detail of ngodetail of ngodetail of ngodetail of ngodetail of ngodetail of ngodetail of ngo
 of ngodetail of ngodetail of ngodetail of ngodetail of ngodetail of ngo
 of ngodetail of ngodetail of ngodetail of ngodetail of ngodetail of ngo"
                    android:textColor="@color/cardview_dark_background" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:background="#2D2D31"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="15dp" />

</LinearLayout>

