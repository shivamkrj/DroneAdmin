<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
<android.support.v7.widget.CardView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="#F2F2F7"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ngo_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Name of ngo"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:paddingStart="5dp"
            android:text="name of user" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phone_number"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small"
                android:layout_weight="4"
                android:padding="2dp"
                android:text="90********"
                android:paddingStart="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/call_ngo"
                android:src="@drawable/send"
                android:padding="2dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="1dp"
            app:cardBackgroundColor="#B5B5BD"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:background="#FFFFFF"
                android:id="@+id/detail_ngo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:textColor="@color/cardview_dark_background"
                android:text="detail of ngodetail of ngodetail of ngodetail of ngodetail of ngodetail of ngodetail of ngo"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>

